<Window x:Class="SnakeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeWPF"
        mc:Ignorable="d"
        Title="Snake" Height="450" Width="800" ResizeMode="CanResizeWithGrip">
    <Grid Background="DarkGray" d:IsLocked="True">
        <Canvas Name="GameSpace" Background="Gray" HorizontalAlignment="Left" Height="330" Margin="82,0,0,0"  VerticalAlignment="Center" Width="400"/>
        <Button Name="Pause" Content="Szünet" Click="Pause_Click" Margin="614,52,64,335" Background="Gray"/>
        <Button x:Name="Exit" Content="Kilépés" Click="Exit_Click" Margin="614,141,64,246" Background="Gray"/>
        <TextBox Name="Score" Width="95" Height="50" HorizontalAlignment="Right" Margin="0,100,75,0" Background="Gray" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
