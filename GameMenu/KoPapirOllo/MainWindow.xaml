<Window x:Class="KoPapirOllo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoPapirOllo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <!-- Fejléc, amely felszólítja a játékost a választásra -->
        <TextBlock Text="Válassz egyet:" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
        <!-- Gombok a kő, papír és olló választásokhoz -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Kő" Margin="10" Click="Button_Click" Tag="Kő"/>
            <Button Content="Papír" Margin="10" Click="Button_Click" Tag="Papír"/>
            <Button Content="Olló" Margin="10" Click="Button_Click" Tag="Olló"/>
        </StackPanel>
        <!-- Szövegdoboz az eredmények megjelenítésére -->
        <TextBlock x:Name="ResultText" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
